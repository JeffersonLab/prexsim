# Looking for user defined ROOT_VERSION
if( ! $?ROOT_VERSION) then
	setenv ROOT_VERSION $DEFAULT_ROOT_VERSION
endif

# check=0 means this is a ROOT_VERSION after Mar 25, 2013
#         default, too, if versnum gets erased or fails.
# check=1 means it's earlier.  

if ( -e $JLAB_SOFTWARE/root/versnum ) then
   set check="`$JLAB_SOFTWARE/root/versnum $ROOT_VERSION`"
else
   set check=1
endif

if ( $check ) then
  setenv ROOTSYS  $JLAB_SOFTWARE/root/$ROOT_VERSION/
else 
  setenv ROOTSYS  $JLAB_SOFTWARE/root/$ROOT_VERSION/root
endif

setenv ROOTLIB  $ROOTSYS/lib/root

set path = ($ROOTSYS/bin $path) 
setenv LD_LIBRARY_PATH $ROOTSYS/lib/root:${LD_LIBRARY_PATH}


if( ! -d $ROOTSYS/lib ) then
	echo " ? Attention: No ROOT installation found."
else
	echo " > ROOT    version: " $ROOT_VERSION "    installed in:" \$JLAB_SOFTWARE/root
endif

