name := moller_sim
G4TARGET := $(name)
G4EXLIB := true

ifndef G4INSTALL
  G4INSTALL = ../../..
endif

.PHONY: all
all: lib bin

include $(G4INSTALL)/config/binmake.gmk

CPPFLAGS  += -g

ROOTCFLAGS = $(shell $(ROOTSYS)/bin/root-config --cflags)
ROOTLIBS   = $(shell $(ROOTSYS)/bin/root-config --nonew --glibs --libs) -lMinuit -lHtml
CPPFLAGS  += $(ROOTCFLAGS) -DG4ANALYSIS_USE_ROOT
LDLIBS    += $(ROOTLIBS)

