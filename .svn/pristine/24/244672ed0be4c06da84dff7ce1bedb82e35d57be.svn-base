######################################
# CLAS12 Specific Software Environment
######################################

##### 
# BIN
#####

set path = ($JLAB_SOFTWARE/bin $path) 



###### 
# EVIO
######
# EVIO comes from the repository
if( ! $?EVIO) then
	setenv EVIO $JLAB_SOFTWARE/evio
endif

set path = ($EVIO/bin $path) 
setenv LD_LIBRARY_PATH ${EVIO}/lib:${LD_LIBRARY_PATH}


if( ! -d $EVIO/lib ) then
	echo " ? Attention: No EVIO installation found."
else
	echo " > EVIO is installed in:  " \$JLAB_SOFTWARE/evio
endif


###### 
# GEMC
######
# GEMC comes from the repository
if( ! $?GEMC) then
	setenv GEMC           $JLAB_SOFTWARE/gemc
	setenv GEMC_EVIO2ROOT $JLAB_SOFTWARE/gemc_evio2root
	setenv GEMC_HOST      clasdb.jlab.org
	setenv GEMC_USER      clasuser
endif

set path = ($GEMC $GEMC_EVIO2ROOT $GEMC/database_io $path) 


if( ! -d $GEMC ) then
	echo " ? Attention: No GEMC installation found."
else
	echo " > GEMC is installed in:  " \$JLAB_SOFTWARE/gemc
endif


####### 
# SCRAT
#######
# SCRAT comes from the repository
if( ! $?SCRAT) then
	setenv SCRAT $JLAB_SOFTWARE/scrat
endif

set path = ($SCRAT/bin $path) 
setenv LD_LIBRARY_PATH ${SCRAT}/lib:${LD_LIBRARY_PATH}


if( ! -f $SCRAT/Scrat ) then
	echo " ? Attention: No SCRAT installation found."
else
	echo " > SCRAT is installed in: " \$JLAB_SOFTWARE/scrat
endif


####### 
# BANKS
#######
# BANKS comes from the repository
if( ! $?BANKS) then
	setenv BANKS $JLAB_SOFTWARE/banks
endif

set path = ($BANKS/bin $path) 
setenv LD_LIBRARY_PATH ${SCRAT}/lib:${LD_LIBRARY_PATH}


if( ! -d $BANKS/lib ) then
	echo " ? Attention: No BANKS installation found."
else
	echo " > BANKS is installed in: " \$JLAB_SOFTWARE/banks
endif



############### 
# Scons Scripts
###############
setenv PYTHONPATH ${JLAB_ROOT}/scons_scripts:${PYTHONPATH}


if( ! -d $JLAB_ROOT/scons_scripts ) then
	echo " ? Attention: No Scons Script installation found."
else
	echo " > Scons Scripts are in:  " \$JLAB_ROOT/scons_scripts
endif


###### 
# JANA
######
# Looking for user defined JANA_VERSION
if( ! $?JANA_VERSION) then
	setenv JANA_VERSION $DEFAULT_JANA_VERSION
endif

setenv JANA_HOME $JLAB_SOFTWARE/jana/$JANA_VERSION


set path = ($JANA_HOME/bin $path) 
setenv LD_LIBRARY_PATH ${JANA_HOME}/lib:${LD_LIBRARY_PATH}


if( ! -e $JANA_HOME/lib ) then
	echo " ? Attention: No JANA installation found."
else
	echo " > JANA Version:          " $JANA_VERSION
endif



